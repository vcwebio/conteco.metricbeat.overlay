export CONTECO_DC_METRICS_OVERLAY_DEPLOY_MODE="replicated"
export CONTECO_DC_GLOBAL_VOLUMES="${DOLLAR}{CONTECO_TYPE}_conteco_dc_metrics_overlay_volume: { external: true }"
export CONTECO_DC_GLOBAL_NETWORKS="${DOLLAR}{CONTECO_TYPE}_overlay: { external: true }"
# END GLOBAL SETTINGS

# START SETTINGS metricbeat.overlay
export CONTECO_DC_METRICS_OVERLAY_ENVIRONMENT_SERVICES="'ES_METRICBEAT_OVERLAY=${CONTECO_TYPE}','ES_METRICBEAT_AEROSPIKE=false','ES_METRICBEAT_APACHE=false','ES_METRICBEAT_AWS=false','ES_METRICBEAT_CEPH=false','ES_METRICBEAT_COUCHBASE=false','ES_METRICBEAT_COUCHDB=false','ES_METRICBEAT_DROPWIZARD=false','ES_METRICBEAT_ELASTICSEARCH=true','ES_METRICBEAT_ENVOYPROXY=false','ES_METRICBEAT_ETCD=false','ES_METRICBEAT_GOLANG=false','ES_METRICBEAT_GRAPHITE=false','ES_METRICBEAT_HAPROXY=false','ES_METRICBEAT_HTTP=false','ES_METRICBEAT_JOLOKIA=false','ES_METRICBEAT_KAFKA=true','ES_METRICBEAT_KIBANA=true','ES_METRICBEAT_KUBERNETES=false','ES_METRICBEAT_KVM=false','ES_METRICBEAT_LOGSTASH=false','ES_METRICBEAT_MEMCACHED=false','ES_METRICBEAT_MONGODB=false','ES_METRICBEAT_MSSQL=false','ES_METRICBEAT_MUNIN=false','ES_METRICBEAT_MYSQL=false','ES_METRICBEAT_NATS=false','ES_METRICBEAT_NGINX=false','ES_METRICBEAT_PHP_FPM=false','ES_METRICBEAT_POSTGRESQL=false','ES_METRICBEAT_PROMETHEUS=false','ES_METRICBEAT_RABBITMQ=false','ES_METRICBEAT_REDIS=false','ES_METRICBEAT_TRAEFIK=false','ES_METRICBEAT_UWSGI=false','ES_METRICBEAT_VSPHERE=false','ES_METRICBEAT_ZOOKEEPER=true'"
