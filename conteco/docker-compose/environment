#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export CONTECO_DC_GLOBAL_SERVICES='metricbeat.overlay'
export CONTECO_DC_GLOBAL='$CONTECO_DC_GLOBAL_SERVICE_NAME,$CONTECO_DC_GLOBAL_IMAGE_NAME,$CONTECO_DC_METRICBEAT_OVERLAY_COMMAND,$CONTECO_DC_METRICBEAT_OVERLAY_VOLUMES,$CONTECO_DC_METRICBEAT_OVERLAY_PORTS,$CONTECO_DC_METRICBEAT_OVERLAY_DEPLOY_LABELS,$CONTECO_DC_METRICBEAT_OVERLAY_DEPLOY_MODE,$CONTECO_DC_GLOBAL_VOLUMES'
# END CONFIGURATION

# START GLOBAL SETTINGS
export CONTECO_DC_GLOBAL_SERVICE_NAME="${CONTECO_TYPE}"
export CONTECO_DC_GLOBAL_IMAGE_NAME="${CONTECO_TYPE}.${CONTECO_NAME}:${CONTECO_TAG}"
export CONTECO_DC_METRICBEAT_OVERLAY_COMMAND=
export CONTECO_DC_METRICBEAT_OVERLAY_VOLUMES="'/etc:/hostfs/etc:ro'"
export CONTECO_DC_METRICBEAT_OVERLAY_PORTS=
export CONTECO_DC_METRICBEAT_OVERLAY_DEPLOY_LABELS=
export CONTECO_DC_METRICBEAT_OVERLAY_DEPLOY_MODE="replicated"
export CONTECO_DC_GLOBAL_VOLUMES=
# END GLOBAL SETTINGS

# START SETTINGS metricbeat.overlay
export CONTECO_DC_METRICBEAT_OVERLAY_ENVIRONMENT="'ES_METRICBEAT_OVERLAY=${CONTECO_TYPE}','ES_METRICBEAT_AEROSPIKE=true','ES_METRICBEAT_APACHE=true','ES_METRICBEAT_AWS=true','ES_METRICBEAT_CEPH=true','ES_METRICBEAT_COUCHBASE=true','ES_METRICBEAT_COUCHDB=true','ES_METRICBEAT_DROPWIZARD=true','ES_METRICBEAT_ELASTICSEARCH=true','ES_METRICBEAT_ENVOYPROXY=true','ES_METRICBEAT_ETCD=true','ES_METRICBEAT_GOLANG=true','ES_METRICBEAT_GRAPHITE=true','ES_METRICBEAT_HAPROXY=true','ES_METRICBEAT_HTTP=true','ES_METRICBEAT_JOLOKIA=true','ES_METRICBEAT_KAFKA=true','ES_METRICBEAT_KIBANA=true','ES_METRICBEAT_KUBERNETES=true','ES_METRICBEAT_KVM=true','ES_METRICBEAT_LOGSTASH=true','ES_METRICBEAT_MEMCACHED=true','ES_METRICBEAT_MONGODB=true','ES_METRICBEAT_MSSQL=true','ES_METRICBEAT_MUNIN=true','ES_METRICBEAT_MYSQL=true','ES_METRICBEAT_NATS=true','ES_METRICBEAT_NGINX=true','ES_METRICBEAT_PHP_FPM=true','ES_METRICBEAT_POSTGRESQL=true','ES_METRICBEAT_PROMETHEUS=true','ES_METRICBEAT_RABBITMQ=true','ES_METRICBEAT_REDIS=true','ES_METRICBEAT_TRAEFIK=true','ES_METRICBEAT_UWSGI=true','ES_METRICBEAT_VSPHERE=true','ES_METRICBEAT_ZOOKEEPER=true'"
export CONTECO_DC_METRICBEAT_OVERLAY_NETWORKS="${CONTECO_ECOSYSTEM}_overlay"
export CONTECO_DC_METRICBEAT_OVERLAY_DEPLOY_RESOURCES_LIMITS_CPUS="0.75"
export CONTECO_DC_METRICBEAT_OVERLAY_DEPLOY_RESOURCES_RESERVATIONS_CPUS="0.01"
export CONTECO_DC_METRICBEAT_OVERLAY_DEPLOY_RESOURCES_LIMITS_MEMORY="64m"
export CONTECO_DC_METRICBEAT_OVERLAY_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="8m"
# END SETTINGS metricbeat.overlay

# START TOPLEVEL SETTINGS
export CONTECO_DC_GLOBAL_NETWORKS="${CONTECO_ECOSYSTEM}_overlay: { external: true }"
# END TOPLEVEL SETTINGS
