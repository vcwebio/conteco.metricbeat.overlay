#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export CONTECO_DC_GLOBAL_SERVICES='metricbeat.base'
export CONTECO_DC_GLOBAL='$CONTECO_DC_GLOBAL_SERVICE_NAME,$CONTECO_DC_GLOBAL_IMAGE_NAME,$CONTECO_DC_METRICBEAT_OVERLAY_ES_ENVIRONMENT,$CONTECO_DC_METRICBEAT_OVERLAY_ES_COMMAND,$CONTECO_DC_METRICBEAT_OVERLAY_ES_VOLUMES,$CONTECO_DC_METRICBEAT_OVERLAY_ES_PORTS,$CONTECO_DC_METRICBEAT_OVERLAY_ES_DEPLOY,$CONTECO_DC_METRICBEAT_OVERLAY_ES_DEPLOY_MODE'
# END CONFIGURATION

# START GLOBAL SETTINGS
export CONTECO_DC_GLOBAL_SERVICE_NAME="${CONTECO_TYPE}"
export CONTECO_DC_GLOBAL_IMAGE_NAME="${CONTECO_TYPE}.${CONTECO_NAME}:${CONTECO_TAG}"
export CONTECO_DC_METRICBEAT_OVERLAY_ES_ENVIRONMENT=
export CONTECO_DC_METRICBEAT_OVERLAY_ES_COMMAND=
export CONTECO_DC_METRICBEAT_OVERLAY_ES_VOLUMES=
export CONTECO_DC_METRICBEAT_OVERLAY_ES_PORTS=
export CONTECO_DC_METRICBEAT_OVERLAY_ES_DEPLOY_MODE="replicated"
# END GLOBAL SETTINGS

# START SETTINGS metricbeat.overlay_es
export CONTECO_DC_METRICBEAT_OVERLAY_ES_NETWORKS="${CONTECO_ECOSYSTEM}_overlay"
export CONTECO_DC_METRICBEAT_OVERLAY_ES_DEPLOY_RESOURCES_LIMITS_CPUS="0.75"
export CONTECO_DC_METRICBEAT_OVERLAY_ES_DEPLOY_RESOURCES_RESERVATIONS_CPUS="0.01"
export CONTECO_DC_METRICBEAT_OVERLAY_ES_DEPLOY_RESOURCES_LIMITS_MEMORY="64m"
export CONTECO_DC_METRICBEAT_OVERLAY_ES_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="8m"
# END SETTINGS metricbeat.overlay_es

# START TOPLEVEL SETTINGS
export CONTECO_DC_GLOBAL_VOLUMES=
export CONTECO_DC_GLOBAL_NETWORKS="${CONTECO_DC_METRICBEAT_OVERLAY_ES_NETWORKS}: { external: true }"
# END TOPLEVEL SETTINGS
